{
  "name": "@krepis/sdk",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "tasks": {
    "test": "deno test --allow-ffi --allow-read",
    "test:ffi": "deno test --allow-ffi --allow-read src/platform/ffi/",
    "test:core-di": "deno test --allow-ffi --allow-read src/core/",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "build-kernel": "cd ../../crates/krepis-kernel && cargo build --release",
    "sync-bin": "deno run -A scripts/sync_bin.ts",
    "check": "deno check mod.ts"
  },
  "imports": {
    "@/": "./src/"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo", "camelcase"]
    },
    "exclude": [
      "node_modules",
      "bin"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "exclude": [
      "node_modules",
      "bin"
    ]
  },
  "test": {
    "include": ["src/**/*_test.ts"]
  },
  "compilerOptions": {
    "lib": ["deno.ns","deno.window", "esnext"],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}